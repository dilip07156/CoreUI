	function ViewSalesPipelineRoles(message,tab) {
		$.ajax({
			type: "GET",
			url: "/UserAndRoleMgmt/ViewSalesPipelineRoles",
			data: { tabName: tab },
			dataType: "html",		
			success: function (response) {
				 
				$(".displaySalesPipelineRoles").html(response.replace("action-popup ", ""));
				$("#action-popup").show();
				if (message != null && message != "" && tab == "sales") {				
					//var successmsg = '<div class="alert alert-success" id="errmsg"><a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a><strong>Success! ' + message + ' </strong></div>';
