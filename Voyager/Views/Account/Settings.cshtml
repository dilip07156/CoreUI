					$("#frmtabSalesOffice #successmsg2").text(message);
					$("#frmtabSalesOffice .success2").show();
				}	
				if (message != null && message != "" && tab == "destination") {
					//var successmsg = '<div class="alert alert-success" id="errmsg1"><a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a><strong>Success! ' + message + ' </strong></div>';
