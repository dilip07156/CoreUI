@model Voyager.App.ViewModels.COHeaderViewModel
@{
    ViewData["Title"] = "ProposalDocumentHeader";
    Layout = "";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <link href="@Model.URLinitial/resources/css/style_report.css" rel="stylesheet" type="text/css">
    <script type="text/javascript">
        function subst() {
            var vars = {};
            var x = document.location.search.substring(1).split('&');
            for (var i in x) { var z = x[i].split('=', 2); vars[z[0]] = unescape(z[1]); }
            var x = ['frompage', 'topage', 'page', 'webpage', 'section', 'subsection', 'subsubsection'];
            for (var i in x) {
                var y = document.getElementsByClassName(x[i]);
                for (var j = 0; j < y.length; ++j) y[j].textContent = vars[x[i]];

                if (vars['page'] == 1) { // If page is 1, set FakeHeaders display to none
                    document.getElementById("FakeFooters").style.display = 'none';
                }
            }
        }
    </script>
</head>
<body onload="subst()" @*style="border:1px solid black;border-top:none;height:90px;"*@>
    <table width="950" border="0" align="center" cellpadding="0" cellspacing="0" class="tbl-center" id="FakeFooters">
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <table width="950" border="0" align="center" cellpadding="0" cellspacing="0" class="tbl-center">
                    <tr>
                        <td class="footer">
                            <table width="950" border="0" align="center" cellpadding="0" cellspacing="0" class="tbl-center">
                                <tr>
                                    <td class="ftr-bdr"><img src="@Model.URLinitial/resources/images/proposal-report/spacer.gif" alt="" /></td>
                                </tr>
                                <tr>
                                    <td class="footer">
                                        <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td style="width:71px;"><img src="@Model.URLinitial/resources/images/proposal-report/spacer.gif" alt="" /></td>
                                                <td align="left">
                                                    <table border="0" align="left" cellpadding="0" cellspacing="0">
                                                        <tr>
                                                            <td height="30" align="left" valign="middle"><img src="@Model.URLinitial/resources/images/proposal-report/telephone.jpg" width="13" height="14" alt=""></td>
                                                            <td width="5" height="30" align="left" valign="middle"></td>
                                                            <td height="30" align="left" valign="middle"><a href="tel:@Model.SystemPhone">@Model.SystemPhone</a></td>
                                                            <td width="100" height="30" align="left" valign="middle"></td>
                                                            <td height="30" align="left" valign="middle"><img src="@Model.URLinitial/resources/images/proposal-report/mailto.jpg" width="15" height="11" alt=""></td>
                                                            <td width="9" height="30" align="left" valign="middle"></td>
                                                            <td height="30" align="left" valign="middle"><a href="mailto:@Model.SystemEmail">@Model.SystemEmail</a></td>
                                                            <td width="100" height="30" align="left" valign="middle">&nbsp;</td>
                                                            <td height="30" align="left" valign="middle"><img src="@Model.URLinitial/resources/images/proposal-report/arrow.jpg" width="9" height="16" alt=""></td>
                                                            <td width="7" align="left" valign="middle">&nbsp;</td>
                                                            <td height="30" align="left" valign="middle"><a href="http://@Model.SystemWebsite/" target="_blank">@Model.SystemWebsite</a></td>
                                                        </tr>
                                                    </table>
                                                </td>
                                                @*<td align="right" class="page-no">Page [page] of [topage]</td>*@
                                                <td style="width:71px;"><img src="@Model.URLinitial/resources/images/proposal-report/spacer.gif" alt="" /></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td height="15"><img src="@Model.URLinitial/resources/images/proposal-report/spacer.gif" alt="" /></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>