@model Voyager.App.ViewModels.COHeaderViewModel
@{
    ViewData["Title"] = "ProposalDocumentHeader";
    Layout = "";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <link href="@Model.URLinitial/resources/css/style_report.css" rel="stylesheet" type="text/css">
    <script src="@Model.URLinitial/resources/js/jquery.min.js"></script>
    <script type="text/javascript">
        function subst() {
            var vars = {};
            var x = document.location.search.substring(1).split('&');
            for (var i in x) { var z = x[i].split('=', 2); vars[z[0]] = unescape(z[1]); }
            var x = ['frompage', 'topage', 'page', 'webpage', 'section', 'subsection', 'subsubsection'];
            
            for (var i in x) {
                var y = document.getElementsByClassName(x[i]);
                for (var j = 0; j < y.length; ++j) y[j].textContent = vars[x[i]];

                if (vars['page'] == 1) { // If page is 1, set FakeHeaders display to none
                    document.getElementById("FakeHeaders").style.display = 'none';
                    //$('#FakeHeaders > tbody > tr > td').css('height', '0px');
                }

                //if (vars['page'] == ) { // If page is 1, set FakeHeaders display to none
                //    document.getElementById("FakeHeaders").style.display = 'none';
                //}
            }
            // each page will have an element with class 'section' from the body of the footer HTML
            //var z = document.getElementsByClassName('header-section');
            //$(".header-section")[z.length-1].hide();
            //$('.header-section:last')[0].style.display = "none";
            //$(".header-section:last-child")[0].style.cssText = 'display:none;';
            //for (var j = 0; j < y.length; j++) {
            //    // if current page equals total pages
            //    if (vars[x[2]] == vars[x[1]]) {
            //        y[j].style.cssText = 'display:none;';
            //    }
            //}
        }
    </script>
</head>
<body onload="subst()" @*style="border:1px solid black;border-bottom:none;height:196px;"*@>
